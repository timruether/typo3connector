<!-- Holosystems/Typo3connector/etc/api.xml -->
<config>
	<api>
		<resources>
			<typo3connector translate="title" module="typo3connector">
				<model>typo3connector/typo3connector_api</model>
				<title>Typo3connector API</title>
				<acl>typo3connector</acl>
				<methods>
					<cleancache translate="title" module="typo3connector">
						<title>Typo3connector CleanCache</title>
						<method>cleancache</method>
						<acl>typo3connector/cleancache</acl>
					</cleancache>
					<cleanpagecache translate="title" module="typo3connector">
						<title>Typo3connector CleanPageCache</title>
						<method>cleanpagecache</method>
						<acl>typo3connector/cleanpagecache</acl>
					</cleanpagecache>
				</methods>
				<faults module="typo3connector">
				</faults>
			</typo3connector>
		</resources>
		<v2>
			<resources_function_prefix>
				<typo3connector>typo3connector</typo3connector>
			</resources_function_prefix>
		</v2>
		<resources_alias>
			<typo3connector>typo3connector</typo3connector>
		</resources_alias>
		<acl>
			<resources>
				<typo3connector translate="title" module="typo3connector">
					<title>TYPO3 Connector</title>
					<sort_order>3</sort_order>
					<cleancache translate="title" module="typo3connector">
						<title>Clean Cache</title>
					</cleancache>
					<cleanpagecache translate="title" module="typo3connector">
						<title>Clean Page Cache</title>
					</cleanpagecache>
				</typo3connector>
			</resources>
		</acl>
	</api>
</config>
