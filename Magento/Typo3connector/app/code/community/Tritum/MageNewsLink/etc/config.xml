/**
 * Module configuration
 *
 * @category	Tritum
 * @package		Tritum_MageNewsLink
 * @subpackage	Config
 * @author		Daniel Lorenz <daniel.lorenz@mail.tritum.de>
 * @since		0.1.0
 */
-->
<config>
	<modules>
		<Tritum_MageNewsLink>
			<version>0.1.0</version>
		</Tritum_MageNewsLink>
	</modules>
	<frontend>
		<routers>
			<tritum_magenewslink>
				<use>standard</use>
				<args>
					<!-- @see http://stackoverflow.com/a/12793093 -->
					<!-- <module before="Mage_Contacts">Tritum_MageNewsLink</module> -->
					<module>Tritum_MageNewsLink</module>
					<frontName>t3</frontName>
				</args>
			</tritum_magenewslink>
		</routers>
		<layout>
			<updates>
				<tritum_magenewslink>
					<file>tritum_magenewslink.xml</file>
				</tritum_magenewslink>
			</updates>
		</layout>
		<translate>
			<modules>
				<tritum_magenewslink>
					<files>
						<default>Tritum_MageNewsLink.csv</default>
					</files>
				</tritum_magenewslink>
			</modules>
		</translate>
	</frontend>
	<adminhtml>
		<translate>
			<modules>
				<Tritum_MageNewsLink>
					<files>
						<default>Tritum_MageNewsLink.csv</default>
					</files>
				</Tritum_MageNewsLink>
			</modules>
		</translate>
	</adminhtml>
	<global>
		<helpers>
			<tritum_magenewslink>
				<class>Tritum_MageNewsLink_Helper</class>
			</tritum_magenewslink>
		</helpers>
		<models>
			<tritum_magenewslink>
				<class>Tritum_MageNewsLink_Model</class>
			</tritum_magenewslink>
		</models>
		<blocks>
			<tritum_magenewslink>
				<class>Tritum_MageNewsLink_Block</class>
			</tritum_magenewslink>
		</blocks>
	</global>
	<default>
		<tritum_magenewslink>
			<trigger>
				<enable>1</enable>
			</trigger>
		</tritum_magenewslink>
	</default>
</config>
