<widgets>
	<tritum_magenewslink type="tritum_magenewslink/link" translate="name description" module="tritum_magenewslink">
		<name>Detail News Link</name>
		<description type="desc">Show link to a single News</description>
		<parameters>
			<detail_pid>
				<label>Detail Pid</label>
				<visible>1</visible>
				<required>1</required>
				<type>text</type>
			</detail_pid>
			<news_id>
				<label>News ID</label>
				<visible>1</visible>
				<required>1</required>
				<type>text</type>
			</news_id>
			<template translate="label">
				<label>Template</label>
				<visible>1</visible>
				<type>select</type>
				<value>tritum_magenewslink/link.phtml</value>
				<values>
					<default translate="label">
						<value>tritum_magenewslink/link.phtml</value>
						<label>Standard Link Template</label>
					</default>
				</values>
			</template>
		</parameters>
	</tritum_magenewslink>
</widgets>